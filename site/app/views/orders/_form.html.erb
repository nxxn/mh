<% @body_class = 'two-col' %>

<% content_for :sidebar do %>
  <%= hook :homepage_sidebar_navigation do %>
    <% if "products" == @current_controller && @taxon %>
      <%= render "shared/filters" %>
    <% else %>
      <%= render "shared/taxonomies" %>
    <% end %>
  <% end %>
<% end %>

<%= render "shared/error_messages", :target => @order %>
<table id="cart-detail">
  <thead>
    <tr>
      <%= hook :cart_items_headers do %>
        <th colspan="2"><%= t("item") %></th>
        <th><%= t("price") %></th>
        <th><%= t("qty") %></th>
        <th><%= t("total") %></th>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody id="line_items">
    <%= order_form.fields_for :line_items do |item_form| %>
      <%= render 'line_item', :variant => item_form.object.variant, :line_item => item_form.object, :item_form => item_form %>
    <% end %>
  </tbody>
</table>
