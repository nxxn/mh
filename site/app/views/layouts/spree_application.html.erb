<%= render :partial => 'shared/doc_and_xmlns'%>
<head>
<%= hook :inside_head do %>
  <%= render :partial => 'shared/head'%>
<% end %>
</head>
<%
if @body_class.nil?
  if content_for?(:sidebar)
    @body_class = 'two-col'
  else
    @body_class = 'one-col'
  end
end
 %>
<body class="<%= @body_class %>" id="<%= @body_id %>">
  <div id="header" class="container_bg">
    <div class="container">
      <div class="logotip">   
      	<%= link_to image_tag('/images/links/main.png'), products_path, :class => "main" %>
      	<a class="delivery" href="/delivery"><img src="/images/links/delivery.png"></a>
      	<a class="sizes" href="/sizes"><img src="/images/links/sizes.png"></a>
      	<a class="contacts" href="/contacts"><img src="/images/links/contacts.png"></a>
      	<%= link_to image_tag('/images/admin/bg/spree_50.png'), products_path %>
        
      </div>
    <div id="login-bar">
      <ul id="nav-bar">
        <%= render 'shared/nav_bar' %>
      </ul>
    </div>
    </div>
  </div>

  <div id="wrapper" class="container">
    <% if content_for?(:sidebar) %>
    <div id="sidebar">
      <%= hook :sidebar do %>
        <%= yield :sidebar %>
      <% end %>
    </div>
    <% end %>

    <div id="content">
      
      <% if flash.notice %>
      <div class="flash notice"><%= flash.notice %></div>
      <% end %>
      <% if flash[:error] %>
      <div class="flash errors"><%= flash[:error] %></div>
      <% end %>
      <%= yield %>
    </div>
    

    <% if current_order.nil? || current_order.line_items.count == 0 %>
      <div id="empty-cart"><img src="../../../images/cart-empty_x32.png"><p>  <%= t(:your_cart_is_empty) %></p></div>
    <% else %>
    <div id="sidebar-cart">
    	<img src="../../../images/cart-full_x32.png"> <p> <%= t(:cart) %></p>
    <ul>
      <br>
      <% current_order.line_items.each do |line_item| %>
      <li>
   
      <%= " #{line_item.quantity} x " %>
      <%= link_to line_item.product.name, line_item.product %>
      <p class="cena"><%= " #{line_item.price} LS "%></p>
      	
    </li>
      <% end %>
      </ul>
    
     <p class="summa"> <%= t(:total) %> <%= " #{current_order.total} LS " %></p>
     
     
     <%= button_to t("to_cart") , cart_path, :method => :get %>
     
    
     
     
    </div>
    <% end %>
      

    <div id="social">
    
  
	<iframe src="//www.facebook.com/plugins/likebox.php?href=http%3A%2F%2Fwww.facebook.com%2FMusthave.lv&amp;locale=en_US&amp;width=175&amp;colorscheme=light&amp;show_faces=true&amp;border_color=white&amp;stream=false&amp;header=true&amp;height=295&amp;appId=121200977974544" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:175px; height:295px; text-align:center;" allowTransparency="true"></iframe>

	
	
	
		
	
	
	
    
	</div>
    

    <%= render :partial => 'shared/footer'%>
  </div>



</body>
</html>
